{
    //opções do compilador
    "compilerOptions": {
        //Em qual versão var ser compilado o typescript
        "target": "es6",
        //A pasta que vai ser gerada depois de compilado
        "outDir": "app/js",
        //Quando existir qualquer erro no codigo ts, não vai ser gerado a pasta js
        "noEmitOnError": true,
        //Ativiar erros em variaveis que não tiver tipo.
        "noImplicitAny": true,
        //remover os comentarios do codigo na compilação do projeto
        "removeComments": true,
        //O system.js que é o sistema de modulos do es6, tem uma sintaxe e para isso vamos configurar
        //o compilador para que ele adicione a sintaxe o do system.js
        "module": "system",
        //Para não permitir valores numeros em variaveis, por exemplo uma variavel do tipo boolean
        "strictNullChecks": true,
        //Habilitar o uso de decorators
        "experimentalDecorators": true
    },
    "include": [
        //Quais arquivos devem ser compilado
        "app/ts/**/*"
    ]
}